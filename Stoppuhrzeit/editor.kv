#:kivy 1.1.0
Root:
    text_input: text_input

    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            size_hint_y: None
            height: 60
            Button:
                text: 'Bild ausw√§hlen'
                on_release: root.show_load()
                background_color:[1, 1, 1, 1]

        BoxLayout:
            size_hint_y: None
            height: 50
            TextInput:
                id: text_input
                text: ''


        BoxLayout:
            size_hint_y: None
            height: 60

            Button:
                text: 'Bild analysieren'
                on_press: print("ouch! More gently please")

                background_color:[2, 0, 0, 1]


        BoxLayout:
            size_hint_y: None
            height: 60
            background_color: 2, 0, 0, 1
            Label:
                text: '       Die Zeit: '
                size_hint_x: None
                pos_hint: {'cent': 3}
                color: [1,1,0,1]

            TextInput:
                id: text_input2
                text: ''

            RstDocument:
                text: text_input.text
                show_errors: True


<LoadDialog>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "horizontal"
        FileChooserIconView:
            id: filechooser

        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Cancel"
                on_release: root.cancel()

            Button:
                text: "Load"
                on_release: root.load(filechooser.path, filechooser.selection)
